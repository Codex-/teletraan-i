{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "rules": {
    "array-type": [
      true,
      "array-simple"
    ],
    "await-promise": true,
    "comment-format": true,
    "interface-name": false,
    "interface-over-type-literal": false,
    "max-classes-per-file": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "constructor",
          "instance-method",
          "static-method"
        ]
      }
    ],
    "no-bitwise": false,
    "no-console": false,
    "no-empty": [
      true,
      "allow-empty-functions"
    ],
    "no-implicit-dependencies": false,
    "no-submodule-imports": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "only-arrow-functions": false,
    "prefer-for-of": true,
    "prefer-template": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
